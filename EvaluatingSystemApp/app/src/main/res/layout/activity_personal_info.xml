<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        tools:context="com.vincent.system.ui.personal_info.PersonalInfoActivity">
    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="22dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/role_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"/>
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/account_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/nickname_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
            <Button
                    android:id="@+id/btn_change_info"
                    android:text="修改信息"
                    style="@style/Button.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:padding="10dp"
                    android:textSize="18dp"/>


            <LinearLayout android:id="@+id/change_info_layout"
                          android:visibility="gone"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/info_nickname_change"
                            style="@style/TextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="昵称："
                            android:background="@drawable/input_border_bottom"
                            android:cursorVisible="true"
                            android:gravity="center|left|bottom"
                            android:inputType="text"
                            android:maxLength="50"
                            android:textColor="@color/black_effective"
                    />

                <android.support.design.widget.TextInputEditText
                        android:hint="新密码："
                        android:id="@+id/info_password_change"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_border_bottom"
                        android:cursorVisible="true"
                        android:gravity="center|left|bottom"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:textColor="@color/black_effective"
                />


                <Button
                        android:id="@+id/btn_confirm_change_info"
                        style="@style/Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:padding="10dp"
                        android:text="确认修改"
                        android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.design.card.MaterialCardView>

</LinearLayout>
